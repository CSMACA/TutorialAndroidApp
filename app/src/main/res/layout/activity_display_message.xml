<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplayMessageActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"
            android:scrollbarStyle="insideOverlay"
            android:id="@+id/repeat_scrollview">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/messageRepeated"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textAlignment="textStart"
                android:text="@string/message_repeat_prologue" android:typeface="monospace" android:textSize="14sp"
                android:lineSpacingExtra="14sp" android:textColor="@color/textColor"/>
    </ScrollView>
</android.support.constraint.ConstraintLayout>